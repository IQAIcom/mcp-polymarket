{
	"name": "@iqai/mcp-polymarket",
	"version": "0.0.1",
	"description": "Polymarket MCP Server - Model Context Protocol server for Polymarket trading",
	"type": "module",
	"main": "build/index.js",
	"bin": {
		"mcp-polymarket": "build/index.js"
	},
	"scripts": {
		"build": "tsc",
		"watch": "tsc --watch",
		"prepare": "pnpm run build",
		"check": "biome check --write .",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"test:manual": "tsx test-server.ts",
		"changeset": "changeset",
		"version": "changeset version",
		"publish-packages": "pnpm run build && changeset publish"
	},
	"keywords": [
		"mcp",
		"polymarket",
		"trading",
		"api",
		"model-context-protocol"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.20.2",
		"@polymarket/clob-client": "^4.22.8",
		"ethers": "^5.8.0",
		"fastmcp": "^3.22.0",
		"viem": "^2.38.5",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.1",
		"@changesets/cli": "^2.29.7",
		"@types/node": "^24.9.1",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	}
}
