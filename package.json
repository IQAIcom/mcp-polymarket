{
	"name": "@iqai/mcp-polymarket",
	"version": "0.0.8",
	"description": "Polymarket MCP Server - Model Context Protocol server for Polymarket trading",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"mcp-polymarket": "dist/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc && shx chmod +x dist/index.js",
		"watch": "tsc --watch",
		"start": "node dist/index.js",
		"publish-packages": "pnpm run build && changeset publish",
		"format": "biome format . --write",
		"lint": "biome check ."
	},
	"keywords": [
		"mcp",
		"polymarket",
		"trading",
		"api",
		"model-context-protocol"
	],
	"author": "IQAI",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/IQAIcom/mcp-polymarket.git"
	},
	"dependencies": {
		"@dschz/polymarket-clob-client": "^0.3.0",
		"@hk/polymarket": "jsr:^0.2.1",
		"@modelcontextprotocol/sdk": "^1.20.2",
		"ethers": "^5.7.2",
		"fastmcp": "^3.22.0",
		"shx": "^0.3.4",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.1",
		"@changesets/cli": "^2.29.7",
		"@types/node": "^24.9.1",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	}
}
